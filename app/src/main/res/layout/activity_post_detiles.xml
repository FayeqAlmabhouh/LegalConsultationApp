<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Articles.view.PostDetiles"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    >
    <androidx.appcompat.widget.Toolbar
        style="@style/toolBar"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            >
            <TextView
                style="@style/ToolBarTextStyle"
                android:text="@string/postDitels"
                />
            <TextView
                android:id="@+id/postDitelsSkip"
                style="@style/BackShape"
            />
           <TextView
               android:id="@+id/postDitelsFlag"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:drawableStart="@drawable/ic_flag"
               android:layout_marginTop="@dimen/_25sdp"
               android:layout_gravity="end"
               />



        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">
        <ImageView
            android:id="@+id/image_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/postimg"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"
            android:scaleType="fitXY"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/postDitelsData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_date"
        android:layout_marginStart="@dimen/_10sdp"
        android:drawablePadding="@dimen/_3sdp"
        android:text="NOV 15 2020"
        android:textAlignment="center"
        android:paddingEnd="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <view
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:background="@color/gray"
    android:layout_marginTop="@dimen/_1sdp"/>
    <TextView
        android:id="@+id/postDitelsTiltel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تحكيم محلي وإقليمي"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/ge_ss_light"
        android:textAlignment="textStart"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/dark_gray"
        />
    <TextView
     android:id="@+id/postDetileContent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:scrollbars="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:textSize="@dimen/_10sdp"
    android:text="@string/exampeText"
    android:textAlignment="textStart"
    android:padding="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:fontFamily="@font/ge_ss_light"
    android:textColor="@color/gray"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:background="?android:attr/windowBackground"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/callLawyerBu"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:src="@drawable/phon"/>
        <ImageView
            android:id="@+id/mesgLawyerBu"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/masege"/>
    </LinearLayout>
</LinearLayout>