<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#CAC99C"
    app:contentPadding="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textDirection="rtl">

        <TextView
            android:id="@+id/dilog_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ge_ss_medium"
            android:text="هل أنت متأكد من أنك ترريد تسجيل الخروج ؟"
            android:textColor="@color/Black"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dilog_logOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="2"
                android:fontFamily="@font/ge_ss_light"
                android:gravity="center"
                android:text="تسجيل خروج"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/dilog_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="2"
                android:fontFamily="@font/ge_ss_light"
                android:gravity="center"
                android:text="إلغاء"
                android:textColor="#F3A42E"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>