<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FavoritePage.View.FaveratFragment"
    style="@style/pageLayout"
    android:background="@color/nas"
    >
    <androidx.appcompat.widget.Toolbar
        style="@style/toolBar"
        >
        <FrameLayout
            style="@style/TollBarFrameStyle"
            >
            <TextView
                style="@style/ToolBarTextStyle"
                android:text="@string/favert"
                />

            <TextView
                android:id="@+id/FavertSerch"
                style="@style/serchIcon"
                android:layout_marginTop="@dimen/_5sdp"
                />
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FavoriteRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:scrollbars="none"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        />

</LinearLayout>