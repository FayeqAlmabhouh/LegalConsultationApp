<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/view_post_img"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_6sdp"
            android:scaleType="fitXY"
            android:src="@color/gray_leght" />

        <TextView
            android:id="@+id/view_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/view_post_img"
            android:fontFamily="@font/ge_ss_light"
            android:text="@string/mainPage"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/view_post_decs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_post_title"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/view_post_img"
            android:fontFamily="@font/ge_ss_ultra_light"
            android:maxLines="2"
            android:padding="@dimen/_2sdp"
            android:text="@string/exapem_2"
            android:textAlignment="textStart"
            android:textColor="@color/gray_leght"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/view_post_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_post_img"
            android:layout_toEndOf="@id/view_post_img"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>